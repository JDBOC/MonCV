{% extends 'base.html.twig' %}

{% block title %}Competences index{% endblock %}

{% block body %}
  <div class="container">
    <div class="row mt-4">
      <div class="col-2">
        <a href="{{ path('competences_new') }}" class="btn btn-success"><i class="fas fa-plus-square"></i></a>
      </div>
      <h1 class="align-items-center">Competences index</h1>
    </div>
    <table class="table">
      <thead>
      <tr>
        <th>Titre</th>
        <th>Picture</th>
        <th>actions</th>
      </tr>
      </thead>
      <tbody>
      {% for competence in competences %}
        <tr>
          <td>{{ competence.titre }}</td>
          <td>{{ competence.picture }}</td>
          <td>
            <div class="row justify-content">
              <a href="{{ path('competences_show', {'id': competence.id}) }}" class="btn btn-outline-warning mr-2"><i
                        class="far fa-eye"></i></a>
              {{ include('competences/_delete_form.html.twig') }}
            </div>
          </td>
        </tr>
      {% else %}
        <tr>
          <td colspan="4">no records found</td>
        </tr>
      {% endfor %}
      </tbody>
    </table>
    <div class="row mt-4">
      <div class="col-2"><a href="{{ path('admin_dashboard') }}"> <i class="fas fa-step-backward fa-3x"></i></a></div>
      <div class="text-center">
      </div>
    </div>
  </div>
{% endblock %}
