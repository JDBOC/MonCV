{% extends 'base.html.twig' %}

{% block title %}Experiences index{% endblock %}

{% block body %}
    <div class="container">
        <div class="row mt-4">
            <div class="col-2">
                <a href="{{ path('experiences_new') }}" class="btn btn-success"><i class="fas fa-plus-square"></i></a>
            </div>
                <h1 class="align-self-center">Experiences index</h1>
        </div>
    <table class="table">
        <thead>
            <tr>
                <th>Société</th>
                <th>Poste occupé</th>
                <th>Entrée</th>
                <th>Sortie</th>
                <th>Descriptif</th>
                <th>Lieu</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for experience in experiences %}
            <tr>
                <td>{{ experience.company }}</td>
                <td>{{ experience.title }}</td>
                <td>{{ experience.entree|date('Y-m-d') }}</td>
                <td>{{ experience.sortie|date('Y-m-d') }}</td>
                <td>{{ experience.descriptif }}</td>
                <td>{{ experience.lieu }}</td>
                <td>
                    <div class="row justify-content-between">
                        <a href="{{ path('experiences_show', {'id': experience.id}) }}" class="btn btn-outline-warning"><i class="far fa-eye"></i></a>
                        {{ include('experiences/_delete_form.html.twig') }}
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
<div class="justify-content-center">
    <a href="{{ path('admin_dashboard') }}"> <i class="fas fa-step-backward fa-3x"></i></a>
    </div>


    </div>
{% endblock %}
