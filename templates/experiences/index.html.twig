{% extends 'base.html.twig' %}

{% block title %}Experiences index{% endblock %}

{% block body %}
    <h1>Experiences index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Company</th>
                <th>Title</th>
                <th>Entree</th>
                <th>Sortie</th>
                <th>Descriptif</th>
                <th>Lieu</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for experience in experiences %}
            <tr>
                <td>{{ experience.id }}</td>
                <td>{{ experience.company }}</td>
                <td>{{ experience.title }}</td>
                <td>{{ experience.entree ? experience.entree|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ experience.sortie ? experience.sortie|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ experience.descriptif }}</td>
                <td>{{ experience.lieu }}</td>
                <td>
                    <a href="{{ path('experiences_show', {'id': experience.id}) }}">show</a>
                    <a href="{{ path('experiences_edit', {'id': experience.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('experiences_new') }}">Create new</a>
{% endblock %}
