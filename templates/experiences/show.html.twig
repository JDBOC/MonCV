{% extends 'base.html.twig' %}

{% block title %}Experiences{% endblock %}

{% block body %}
    <h1>Experiences</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ experience.id }}</td>
            </tr>
            <tr>
                <th>Company</th>
                <td>{{ experience.company }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ experience.title }}</td>
            </tr>
            <tr>
                <th>Entree</th>
                <td>{{ experience.entree ? experience.entree|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Sortie</th>
                <td>{{ experience.sortie ? experience.sortie|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Descriptif</th>
                <td>{{ experience.descriptif }}</td>
            </tr>
            <tr>
                <th>Lieu</th>
                <td>{{ experience.lieu }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('experiences_index') }}">back to list</a>

    <a href="{{ path('experiences_edit', {'id': experience.id}) }}">edit</a>

    {{ include('experiences/_delete_form.html.twig') }}
{% endblock %}
