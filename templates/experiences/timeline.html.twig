{% block stylesheets %}
  <link rel="stylesheet" href="{{ asset('css/timeline.css') }}">
{% endblock %}
{% block body %}
  <section class="timeline resume-section" id="experience">
    <h2 class="text-center">EXPERIENCES</h2>
    <ul>
      {% for experience in experiences %}
        <li>
          <div class="content">
            {% if experience.id is even %}
              <div class="row justify-content-between">

                <div class="col-lg-8">
                  <h4 class="text-white">
                    {{ experience.company }}
                  </h4>
                </div>
                <div class="col-lg-4">
                  <time><strong>{{ experience.sortie|date('d-m-Y') }} <br> {{ experience.entree|date('d-m-Y') }}
                    </strong></time>
                </div>

              </div>
            {% else %}

              <div class="row justify-content-between">
                <div class="col-lg-4">
                  <time><strong>{{ experience.sortie|date('d-m-Y') }} <br> {{ experience.entree|date('d-m-Y') }}
                    </strong></time>
                </div>
                <div class="col-lg-8">
                  <h4 class="text-white justify-content-lg-end">
                    {{ experience.company }}
                  </h4>
                </div>

              </div>
            {% endif %}
            <h3 class="text-center mt-4"><strong>{{ experience.title }}</strong></h3>
            <br>
            <p>{{ experience.descriptif | raw }}</p>
          </div>
        </li>
      {% endfor %}
    </ul>
  </section>
{% endblock %}
{% block javascripts %}
  <script>{{ asset('js/timeline.js') }}</script>
  <script src="https://cdn.ckeditor.com/4.13.0/standard/ckeditor.js"></script>
{% endblock %}