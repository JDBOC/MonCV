{% extends 'base.html.twig' %}

{% block title %}Formations index{% endblock %}

{% block body %}
    <div class="container">
    <div class="row mt-4">
        <div class="col-2">
            <a href="{{ path('formations_new') }}" class="btn btn-success"><i class="fas fa-plus-square"></i></a>
        </div>
    <h1>Formations index</h1>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Year</th>
                <th>Lieu</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for formation in formations %}
            <tr>
                <td>{{ formation.title }}</td>
                <td>{{ formation.year }}</td>
                <td>{{ formation.lieu }}</td>
                <td>
                    <div class="row justify-content-between">
                    <a href="{{ path('formations_show', {'id': formation.id}) }}" class="btn btn-outline-warning"><i class="far fa-eye"></i></a>
                    {% include 'formations/_delete_form.html.twig' %}
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="justify-content-center">
        <a href="{{ path('admin_dashboard') }}"> <i class="fas fa-step-backward fa-3x"></i></a>
    </div>
    </div>
{% endblock %}
