{% extends 'base.html.twig' %}

{% block title %}Formations{% endblock %}

{% block body %}
    <h1>Formations</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ formation.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ formation.title }}</td>
            </tr>
            <tr>
                <th>Year</th>
                <td>{{ formation.year }}</td>
            </tr>
            <tr>
                <th>Lieu</th>
                <td>{{ formation.lieu }}</td>
            </tr>
        </tbody>
    </table>

    <div class="row justify-content-center justify-content-center justify-content-around">
        <a href="{{ path('formations_index') }}" class="btn btn-primary"><i class="fas fa-step-backward"></i></a>

        <a href="{{ path('formations_edit', {'id': formation.id}) }}" class="btn btn-warning"><i class="far fa-edit"></i></a>

        {{ include('formations/_delete_form.html.twig') }}
    </div>



{% endblock %}
