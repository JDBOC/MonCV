{% extends 'base.html.twig' %}

{% block title %}
Dashboard
{% endblock %}

{% block body %}
<div class="container">
  <div class="row mt-2">
    <div class="col">
      <div class="card bg-primary text-white text-center">
        <a href="{{ path('competences_index') }}">
        <div class="card-body">
          <div class="row">

            <div class="col-4">
              <i class="fas fa-users fa-3x"></i>
            </div>
            <div class="col-8">
              <h4 class="card-title">{{ stats.competences }} compétences enreigstrées </h4>
            </div>
          </div>
        </div>
        </a>
      </div>
    </div>
    <div class="col">
      <div class="card bg-warning text-white text-center">
        <div class="card-body">
          <div class="row">
            <div class="col-4">
              <i class="fas fa-hotel fa-3x"></i>
            </div>
            <div class="col-8">
              <h4 class="card-title">{{ stats.experiences }} expériences enregistrées</h4>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row mt-2">
    <div class="col">
      <div class="card bg-danger text-white text-center">
        <div class="card-body">
          <div class="row">
            <div class="col-4">
              <i class="fas fa-folder fa-3x"></i>
            </div>
            <div class="col-8">
              <h4 class="card-title">{{ stats.formations }} formations enregistrées</h4>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col">
      <div class="card bg-success text-white text-center">
        <div class="card-body">
          <div class="row">
            <div class="col-4">
              <i class="fas fa-comments fa-3x"></i>
            </div>
            <div class="col-8">
              <h4 class="card-title">{{ path('account_profile') }} Modifier profil utilisateur</h4>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

</div>


{% endblock %}
